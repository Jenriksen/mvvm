<Window x:Class="mvvm.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mvvm.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Label Content="Fornavn:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Efternavn:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Fulde navn:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="85,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" x:Name="txtFirstName" TextChanged="TxtFirstName_OnTextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="85,45,0,0" TextWrapping="Wrap" x:Name="txtLastName" VerticalAlignment="Top" Width="180" TextChanged="TxtLastName_OnTextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="85,77,0,0" TextWrapping="Wrap" x:Name="txtFullName" VerticalAlignment="Top" Width="180" Background="DarkCyan"/>
        <Button Content="Gem" HorizontalAlignment="Left" Margin="209,241,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
